# 자동차에 대한 특징을 하나 더 넣어야 한다.
# sunroof 변수를 추가하고 True값이면 있고, False값이면 없다.



class Person:
    def __init__(self): # __init__(self)는 생성자를 나타내며, 클래스로 하여금 인스턴스가 생성될 때 최초 한번 실행되는 특수한 매직메소드
        self.hello = "안녕하세요" #인스턴스의 속성 hello를 만들고 그 값으로 "안녕하세요"를 초기화

    def greeting(self):
        print(self.hello)


james = Person() # 클래스를 인스턴스화하는 부분. 여기서 생성자가 호출


james.greeting()


class Person2:
    def __init__(self, name, age, adress):
        self.hello = "안녕하세요."
        self.name = name
        self.age = age
        self.adress = adress

    def greeting(self):
        print(f"{self.hello}안녕하세요 제 이름은 {self.name}입니다.")


maria = Person2("마리아", 20, "서울 서초구")


maria.greeting()


print(f"이름: {maria.name}")
print(f"나이: {maria.age}")
print(f"주소: {maria.adress}")


maria.age = 22


print(f"나이: {maria.age}")


class Person3:
    def __init__(self, name, age, adress, wallet):
        self.hello = "안녕하세요."
        self.name = name
        self.age = age
        self.adress = adress
        self.__wallet = wallet

    def pay(self, amount):
        if amount > self.__wallet:
            print("돈이 부족합니다.")
            return

        self.__wallet -= amount
        print(f"이제 {self.__wallet}원 남았네요.")
    def greeting(self):
        print(f"{self.hello} 제 이름은 {self.name}입니다. 저는 {self.adress}에 삽니다")


aria = Person3("아리아", 29, "서울 성동구", 50000)


aria.pay(6000)


# 부모클래스
class Character:
    def __init__(self, name, health):
        self.name = name
        self.health = health

    def attack(self):
        print(f"{self.name}이(가) 공격합니다!")


# 자식클래스
class Warrior(Character):
    def __init__(self, name, health, strength):
        super().__init__(name, health)
        self.strength = strength

    # override
    def attack(self):
        super().attack()
        print(f"{self.name}의 강력한 공격!")


# 자식클래스 2
class Mage(Character):
    def __init__(self, name, health, magic_power):
        super().__init__(name, health)
        self.magic_power = magic_power

    # override
    def attack(self):
        super().attack()
        print(f"{self.name}의 마법 공격!")


player1 = Warrior("전사", 100, 10)
player2 = Mage("마법사", 80, 10)

player1.attack()


player2.attack()


player1.name


player1.strength


player1.health



